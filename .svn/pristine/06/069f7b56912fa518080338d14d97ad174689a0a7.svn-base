.endorse-item-name {
    border-radius: 0 3px 3px 0;
}

.endorse-item-name, .endorse-count {
    float: left;
    line-height: 24px;
}

.endorse-item-name {
    background-color: #f0f0f0;
    padding-right: 10px;
    border-bottom: 1px solid #ddd;
    border-radius: 0 3px 3px 0;
    border-right: 1px solid #ddd;
    color: #333;
    font-size: 15px;
    font-weight: normal;
    line-height: 30px;
    padding: 0 15px;
    position: relative;
    margin: 5px 10px;
    right: 2px;
}

.endorse-item-name-text {
	font-weight: bold;
}

.endorsed-by-viewer .endorse-count, .has-endorsements .endorse-count {
    min-width: 18px;
    padding: 0 2px;
}
.skill-pill .endorse-count, .skill-pill .endorse-item-name {
    float: left;
    line-height: 24px;
}
.endorse-count {
    transition: background-color 0.2s ease 0s;
}
.endorse-count {
    background-color: #1ba8e5;
    border-bottom: 1px solid #1ba8e5;
    border-radius: 3px 0 0 3px;
    color: #fff;
    font-size: 15px;
    font-weight: normal;
    line-height: 30px;
    text-align: center;
    text-shadow: 0 1px 0 #666;
    transition: min-width 0.2s linear 0s;
    width: 45px;
    margin: 20px 10px;
}

.circle {
  display: block;
  width: 200px;
  height: 200px;
  margin: 0px -10px;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
  border: 3px solid #eee;
  box-shadow: 0 2px 1px rgba(0, 0, 0, 0.3);  
}

.circle-header {
  display: inline-block;
  width: 23px;
  height: 23px;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
  box-shadow: 0 2px 1px rgba(0, 0, 0, 0.3); 
}

.circle-header-2 {
  display: inline-block;
  width: 50px;
  height: 50px;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
}


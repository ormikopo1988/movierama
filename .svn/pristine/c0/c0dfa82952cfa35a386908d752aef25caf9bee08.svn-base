  } 
});

var Activity = React.createClass({

	render: function() {
		var result = this.props.result;
		console.log(result);

		var actionDateTime = moment(result.VUA_whenDateTime, 'YYYYMMDDhhmmss').fromNow();

		return (
			<div className="col-md-12 col-sm-12">
				<div className="well well-sm well-agency">           
					<i className="fa fa-clock-o smallFa"></i> {actionDateTime}<br/>
					<i className="fa fa-chevron-right smallFa"></i> {result.VDV_SDOMVAL_description}: {
						result.VUA_whatDVCode === 'VIO' || result.VUA_whatDVCode === 'FO1' || result.VUA_whatDVCode === 'FO2' ?
							<a href={VOICE.linkPrefix('organisation/view/'+result.VUA_relevant1Id)}>{result.targetName}</a> : 
							<a href={VOICE.linkPrefix('profile/view/'+result.VUA_relevant1Id)}>{result.targetName}</a>
					}
				</div>
			</div>
		)
	}
});
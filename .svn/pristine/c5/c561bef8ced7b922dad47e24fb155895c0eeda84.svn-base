	public static 
	function redirectToEditProfileIfNeeded( WOOOF $wo ) {
		if ( !$wo->app->isUserProfileOk ) {
			header( 'Location: ' . $wo->assetsURL . 'profile/edit' );
			exit();
		}
	}
	

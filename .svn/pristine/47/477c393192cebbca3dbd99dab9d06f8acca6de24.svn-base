			}	// new / insert
			else {
				$res = $tbl->updateRowFromArraySimple( $obj->toArray() );
				if ( $res === FALSE ) { return FALSE; }
			}	// update
		}	// for each tag
			
		return true;
	
	}	// saveTags
	

			if($ideaList === FALSE) { die('Failed to get Org List'); }
		
			if($ideaList === 0) {
					
			}
		}
		
		$list = array_merge($userList, $orgList, $ideaList);
		if($userList === 0 && $orgList === 0 && $ideaList === 0) {
